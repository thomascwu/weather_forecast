<%= render "shared/flash" %>

<h1>Weather Forecast</h1>

<%= form_with(method: 'get', local: true) do %>
    <%= label :address, "What is the address for weather forecast?" %><br>
    <%= text_field_tag(:address, @address || @address_default, size: 70) %><br>
    <%= submit_tag("Get Weather Forecast") %>
<% end %>

<% if defined?(@weather_forecast) %>
    <ul>
        <li>Temperature: <%= @weather_forecast.temperature %> ℃</li>
        <li>Temperature Minimum: <%= @weather_forecast.temperature_min %> ℃</li>
        <li>Temperature Maximum: <%= @weather_forecast.temperature_max %> ℃</li>
        <li>Humidity: <%= @weather_forecast.humidity %>%</li>
        <li>Pressure: <%= @weather_forecast.pressure %> millibars</li>
        <li>Description: <%= @weather_forecast.description %></li>
        <li>Is this result from the cache? <%= @weather_forecast_cache_exist %>
    </ul>
<% end %>
